# EditorConfig is awesome: https://EditorConfig.org
# top-most EditorConfig file
root = true
# Matches all files
[*]
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

# Matches all Markdown files
[*.md]
trim_trailing_whitespace = false
